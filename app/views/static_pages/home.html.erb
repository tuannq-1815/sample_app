<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
     <div class="col-md-8">
      <h3><%= t(".micropost_feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".welcome_to_the_Sample_App" %></h1>
  <h2>
    <%= t ".This is the home page for the" %>
    <%= link_to t(".rails_tutorial"), Settings.railstutorial %>
    <%= t ".sample_application" %>
  </h2>
  <%= link_to t(".Sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png"), Settings.rubyonrails %>
<% end %>
